<h1>Transactions</h1>

<% if @transactions.empty? %>
  <h1>No Transactions yet</h1>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Company name</th>
        <th>Shares</th>
        <th>Price</th>
        <th>Amount</th>
        <th>Type</th>
      </tr>
    </thead>

    <tbody>
      <% @transactions.each do |transaction| %>
        <tr>
          <td class='text-gray-500 text-sm'><%= transaction.created_at.strftime('%b %d, %Y %I:%M %P') %></td>
          <td><%= transaction.company_name %></td>
          <td><%= transaction.shares %></td>
          <td><%= format_number transaction.price %></td>
          <td><%= format_number transaction.value %></td>
          <% transaction_name = transaction.transaction_type.name %>
          <td class='<%= transaction_name %>'>
            <%= transaction_name %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
