<div class='container'>
  <h1>Pending Traders</h1>
  <p class='mt-2 text-gray-500'>Traders waiting for admin approval.</p>
  <hr>
  <table>
    <tr>
      <th>Email</th>
      <th>Approved</th>
      <th>Action</th>
    </tr>
    <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.email, admin_user_path(user) %></td>
      <td><%= user.approved? ? 'Approved' : 'Pending' %></td>
      <td>
        <%= form_with url: admin_pending_trader_path(user), :method => :patch do |f| %>
          <%= f.hidden_field :approved, :value => true %>
          <%= f.submit 'Approve Trader' %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
